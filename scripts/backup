#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

# Keep this path for calling _common.sh inside the execution's context of backup and restore scripts
source ../settings/scripts/_common.sh
source /usr/share/yunohost/helpers

#=================================================
# DECLARE DATA AND CONF FILES TO BACKUP
#=================================================
ynh_print_info --message="Declaring files to be backed up..."

#=================================================
# BACKUP THE APP MAIN DIR
#=================================================
ynh_backup --src_path="$install_dir"

#=================================================
# BACKUP THE SYSTEM CONFIGURATION
#=================================================
ynh_backup --src_path="/etc/nginx/conf.d/$domain.d/$app.conf"
ynh_backup --src_path="/etc/php/$phpversion/fpm/pool.d/$app.conf"
ynh_backup --src_path="/etc/logrotate.d/$app"

#=================================================
# BACKUP THE MYSQL DATABASE
#=================================================
ynh_print_info --message="Backing up the MySQL database..."
ynh_mysql_dump_db --database="$db_name" > db.sql

#=================================================
# BACKUP CUSTOM SCRIPTS
#=================================================
ynh_print_info --message="Backing up syncyunohost.sh script from /usr/local/bin/..."
ynh_backup --src_path="/usr/local/bin/syncyunohost.sh"

#=================================================
# BACKUP YUNOHOST GROUP USERS
#=================================================

# Get the main group name from Dolibarr's config
MAIN_GROUP=$(yunohost app setting dolibarr syncyunohost_main_group --output-as plain)

# Check if the group is set
if [ -z "$MAIN_GROUP" ]; then
    ynh_print_warn --message="No main group set in syncyunohost_main_group, skipping group backup."
else
    ynh_print_info --message="Backing up user list from YunoHost group: $MAIN_GROUP..."

    # Get the list of all groups in JSON format
    GROUPS_JSON=$(yunohost user group list --output-as json)

    # Extract members of the main group
    MEMBERS=$(echo "$GROUPS_JSON" | jq -r ".groups[\"$MAIN_GROUP\"].members | @json")

    # Define backup file path
    GROUP_BACKUP_FILE="$install_dir/group_members.json"

    # Save user list to JSON file
    echo "$MEMBERS" > "$GROUP_BACKUP_FILE"

    # Include the file in the backup
    ynh_backup --src_path="$GROUP_BACKUP_FILE"
fi

#=================================================
# END OF SCRIPT
#=================================================
ynh_print_info --message="Backup script completed for $app. (YunoHost will then actually copy those files to the archive)."
